<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.website.userMapper">
	<select id="getTime" resultType="string">
		select now()
	</select>
	<!-- 01. 전체 회원 목록 조회 -->
	<select id="listAll" resultType="com.spring.vo.UserVO">
		select id, pw from user
	</select>
	
	<!-- 02. 회원 등록 -->
	<insert id="insertUser" parameterType="com.spring.vo.UserVO">
		insert into user(id, pw)
		values (#{id},#{pw})
	</insert>
	
	<!-- 03. 회원 정보 상세 조회 -->
	<select id="viewUser" resultType="com.spring.vo.UserVO">
		select * from user where id = #{id}
	</select>
	
	<!-- 04. 회원 정보 수정 처리 -->
	<update id="updateUser" parameterType="com.spring.vo.UserVO">
		update user set id=#{id},
		pw=#{pw} where id= #{id}
	</update>
	
	<!-- 05. 회원 정보 삭제 처리 -->
	<delete id="deleteUser" parameterType="com.spring.vo.UserVO">
		delete from user 
		where id= #{id}
	</delete>
	
	<!-- 06. 비밀번호 체크 -->
	<select id="checkPw" resultType="int">
		SELECT 
			COUNT(*) 
		FROM user
		WHERE id = #{id} AND pw = #{pw}
	</select>
	
	<!-- 07. 아이디 중복 체크 -->
	<select id="checkId" resultType="int">
		SELECT 
			COUNT(*) 
		FROM user
		WHERE id = #{id}
	</select>
	
</mapper>