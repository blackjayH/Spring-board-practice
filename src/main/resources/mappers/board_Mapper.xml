<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.website.boardMapper">
	<select id="getTime" resultType="string">
		select now()
	</select>
	<!-- 01. 전체 회원 목록 조회 -->
	<select id="listAll" resultType="com.spring.vo.BoardVO">
		<!--  SELECT * FROM BBS WHERE bbsID < ? AND bbsAvailable = 1 ORDER BY bbsID DESC LIMIT 10-->
		select now()
	</select>
	
	<!-- 02. 회원 등록 -->
	<insert id="insertBoard" parameterType="com.spring.vo.BoardVO">
		insert into bbs(bbsID, bbsTitle, userID, bbsDate, bbsContent, bbsAvailable)
		values (#{getNext()}+1, #{bbsTitle}, #{userID}, #{getTime()}, #{bbsContent}, 1)
	</insert>
	
	<!-- 03. 회원 정보 상세 조회 -->
	<select id="viewBoard" resultType="com.spring.vo.BoardVO">
		select * from user where id = #{id}
	</select>
	
	<!-- 04. 회원 정보 수정 처리 -->
	<update id="updateBoard" parameterType="com.spring.vo.BoardVO">
		update user set id=#{id},
		pw=#{pw} where id= #{id}
	</update>
	
	<!-- 05. 회원 정보 삭제 처리 -->
	<delete id="deleteBoard" parameterType="com.spring.vo.BoardVO">
		delete from user 
		where id= #{id}
	</delete>
	
	<!-- 06. 비밀번호 체크 -->
	<select id="getNext" parameterType="com.spring.vo.BoardVO" resultType="int">
		SELECT bbsID FROM BBS ORDER BY bbsID DESC
	</select>
	
	<!-- 07. 아이디 중복 체크 -->
	<select id="checkId" resultType="int">
		SELECT 
			COUNT(*) 
		FROM user
		WHERE id = #{id}
	</select>
	
</mapper>